<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/altMenuLayout"
    android:background="@drawable/alt_menu_arkaplan"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center">
        <ImageView
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@drawable/ic_baseline_drag_handle_24"
            android:contentDescription="@string/profile_picture" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/resimCek"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:padding="10dp"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/yuvarlak_arkaplan_yesil"
                android:src="@drawable/ic_baseline_photo_camera_24"
                android:contentDescription="@string/camera" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:text="@string/camera"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/galeridenSec"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:padding="10dp"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/yuvarlak_arkaplan_mor"
                android:src="@drawable/ic_baseline_image_24"
                android:contentDescription="@string/gallery" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:text="@string/gallery"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/resmiKaldir"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:padding="10dp"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/yuvarlak_arkaplan_kirmizi"
                android:src="@drawable/ic_baseline_delete_24"
                android:contentDescription="@string/remove" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:text="@string/remove"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>