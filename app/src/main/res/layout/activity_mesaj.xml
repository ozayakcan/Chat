<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:animateLayoutChanges="false"
    android:id="@+id/constraintLayout"
    tools:context=".MesajActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/barLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/MenuStil"
            app:contentInsetStartWithNavigation="0dp">
            <RelativeLayout
                android:id="@+id/kisiBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/profilResmiLayout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profilResmi"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/varsayilan_arkaplan"/>
                    <TextView
                        android:id="@+id/kisiBasHarfi"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="25sp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/profilResmiLayout"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/isim"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/durum"
                        android:textColor="#fff"
                        android:textSize="13sp"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/secilenMesaj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="8dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="24sp"
                android:visibility="gone"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:id="@+id/progressBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/barLayout"
        app:layout_constraintBottom_toTopOf="@id/mesajlarRW"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/sending_media" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-7dp"
            android:backgroundTint="@color/white"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:max="100" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mesajlarRW"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/progressBarLayout"
        app:layout_constraintBottom_toTopOf="@id/altUyariLayout" />
    <LinearLayout
        android:id="@+id/dosyaGonderLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:visibility="invisible"
        android:background="@drawable/yuvarlak_koseler_15_beyaz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gonderBtnLayout1"
        app:layout_constraintBottom_toTopOf="@id/gonderTextLayout1">
        <include layout="@layout/dosya_gonder"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/kaydirBtnLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@id/altUyariLayout">
        <LinearLayout
            android:id="@+id/kaydirBtnLayout2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/yuvarlak_arkaplan_beyaz"
            tools:ignore="UselessParent"
            android:visibility="gone">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:padding="1dp"
                android:src="@drawable/kaydir_butonu"
                android:contentDescription="@string/scroll" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/altUyariLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/gonderTextLayout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/altUyari"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@drawable/varsayilan_arkaplan"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/you_cannot_send_messages_in_the_archive"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gonderTextLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gonderBtnLayout1">
        <RelativeLayout
            android:id="@+id/gonderTextLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="2dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:background="@drawable/gonder_edittext_arkaplan"
            tools:ignore="UselessParent">
            <EditText
                android:id="@+id/gonderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:hint="@string/type_a_message"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="5"
                android:scrollbars="vertical"
                android:background="@color/white"
                android:textSize="15sp"
                android:importantForAutofill="no"/>
            <ImageView
                android:id="@+id/dosyaGonder"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="3dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_attach_file_24"
                android:contentDescription="@string/send_media" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gonderBtnLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/gonderBtnLayout2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/yuvarlak_arkaplan"
            tools:ignore="UselessParent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:padding="1dp"
                android:src="@drawable/gonder_butonu"
                android:contentDescription="@string/send" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>